	update_interval = 1.0,
	total_run_times = 0,
	own_window = true,
	own_window_transparent = false,
	own_window_colour = '222222',
	own_window_type = 'override',
	own_window_title = 'Conky_Flux',
	double_buffer = true,
	maximum_width = 150,
	minimum_width = 150,
	draw_shades = false,
	draw_outline = false,
